# {{ ansible_managed }}

server {
	
	listen 80;

	root /usr/share/nginx/www/;
	index index.html index.htm;

    charset utf-8;


	location / {
		try_files $uri $uri/ =404;
	}

	error_page 404 /404.html;
	error_page 500 502 503 504 /50x.html;
	location = /50x.html {
		root /usr/share/nginx/html;
	}

}